{{#if user}}
<div id="user-id" value="{{user.id}}">
  <h4>Hello {{user.firstname}} {{user.lastname}}, Checkout or create some activities and get out there!!!</h4>
</div>
{{/if}}
<br>
<br>
<div id="home">
  <div class="row">
    {{#each post}}
    <div class="col l4 m6 s12">
      <div class="card medium">
        <div class="card-image waves-effect waves-block waves-light">
          <a href="/posts/{{this.id}}"><img id="img{{this.id}}" class="activator" src="assets/images/default.png"></a>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{this.title}}</span>
          {{#if belongs}}
          <a href="/editpost/{{this.id}}">
            <p>edit</p>
          </a>
          {{/if}}
        </div>

      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/posts.js"></script>