{{#if user}}
<h1>{{user.firstname}} {{user.lastname}}</h1>
<h1>{{user.email}}</h1>
{{/if}}
<br>
<br>
<div id="home">
  <div class="row">
    {{#each post}}
    <div class="col s4">
      <div class="card medium">
        <div class="card-image waves-effect waves-block waves-light">
          <a href="/posts/{{this.id}}""><img id="img{{this.id}}" class="activator" src=""></a>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{this.title}}<i
              class="material-icons right">more_vert</i></span>
          <a href="/api/edit_post">{{#if user}}<p>Edit Post</p>{{/if}}</a>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{this.title}}<i class="material-icons right">close</i></span>
          <p>{{this.body}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/posts.js"></script>